{
  "quality_weights": {
    "version": "1.0.0",
    "description": "Quality assessment weights for audio generation",
    
    "overall_weights": {
      "semantic_match": 0.3,
      "mix_readiness": 0.25,
      "perceptual_quality": 0.25,
      "stability": 0.2
    },
    
    "semantic_match": {
      "description": "How well the generated audio matches the semantic prompt",
      "weights": {
        "frequency_match": 0.4,
        "timbre_match": 0.3,
        "rhythm_match": 0.2,
        "harmonic_match": 0.1
      },
      "thresholds": {
        "excellent": 0.9,
        "good": 0.7,
        "acceptable": 0.5,
        "poor": 0.3
      }
    },
    
    "mix_readiness": {
      "description": "How well the audio fits in a mix context",
      "weights": {
        "frequency_balance": 0.3,
        "dynamic_range": 0.25,
        "stereo_width": 0.2,
        "frequency_separation": 0.15,
        "transient_handling": 0.1
      },
      "frequency_bands": {
        "sub_bass": [20, 60],
        "bass": [60, 250],
        "low_mids": [250, 2000],
        "high_mids": [2000, 4000],
        "presence": [4000, 6000],
        "brilliance": [6000, 20000]
      }
    },
    
    "perceptual_quality": {
      "description": "Perceptual audio quality metrics",
      "weights": {
        "clarity": 0.3,
        "warmth": 0.25,
        "brightness": 0.2,
        "depth": 0.15,
        "spatial_presence": 0.1
      },
      "frequency_response": {
        "target_curve": "flat",
        "tolerance_db": 3.0,
        "critical_frequencies": [100, 1000, 5000, 10000]
      }
    },
    
    "stability": {
      "description": "Temporal stability and consistency",
      "weights": {
        "amplitude_stability": 0.4,
        "frequency_stability": 0.3,
        "phase_stability": 0.2,
        "noise_floor": 0.1
      },
      "stability_thresholds": {
        "amplitude_variance": 0.1,
        "frequency_drift": 0.05,
        "phase_jitter": 0.02,
        "noise_floor_db": -60
      }
    },
    
    "role_specific_weights": {
      "PAD": {
        "semantic_match": 0.4,
        "mix_readiness": 0.3,
        "perceptual_quality": 0.2,
        "stability": 0.1,
        "additional_factors": {
          "atmospheric_quality": 0.3,
          "harmonic_richness": 0.2,
          "stereo_width": 0.2,
          "envelope_smoothness": 0.3
        }
      },
      "BASS": {
        "semantic_match": 0.3,
        "mix_readiness": 0.4,
        "perceptual_quality": 0.2,
        "stability": 0.1,
        "additional_factors": {
          "low_frequency_presence": 0.4,
          "punch": 0.3,
          "tightness": 0.2,
          "harmonic_clarity": 0.1
        }
      },
      "LEAD": {
        "semantic_match": 0.4,
        "mix_readiness": 0.2,
        "perceptual_quality": 0.3,
        "stability": 0.1,
        "additional_factors": {
          "expressiveness": 0.3,
          "clarity": 0.3,
          "harmonic_richness": 0.2,
          "dynamic_range": 0.2
        }
      },
      "FX": {
        "semantic_match": 0.5,
        "mix_readiness": 0.2,
        "perceptual_quality": 0.2,
        "stability": 0.1,
        "additional_factors": {
          "uniqueness": 0.4,
          "textural_interest": 0.3,
          "modulation_depth": 0.2,
          "frequency_spectrum": 0.1
        }
      },
      "TEXTURE": {
        "semantic_match": 0.4,
        "mix_readiness": 0.2,
        "perceptual_quality": 0.3,
        "stability": 0.1,
        "additional_factors": {
          "textural_complexity": 0.4,
          "movement": 0.3,
          "frequency_evolution": 0.2,
          "spatial_character": 0.1
        }
      }
    },
    
    "technical_weights": {
      "description": "Technical quality metrics",
      "weights": {
        "signal_to_noise": 0.3,
        "total_harmonic_distortion": 0.25,
        "intermodulation_distortion": 0.2,
        "frequency_response": 0.15,
        "phase_response": 0.1
      },
      "thresholds": {
        "snr_db": 60,
        "thd_percent": 0.1,
        "imd_percent": 0.05,
        "frequency_tolerance_db": 1.0,
        "phase_tolerance_degrees": 5.0
      }
    },
    
    "context_weights": {
      "description": "Context-dependent quality adjustments",
      "tempo_adjustments": {
        "slow": [60, 90],
        "medium": [90, 130],
        "fast": [130, 180],
        "very_fast": [180, 200]
      },
      "key_adjustments": {
        "major": {
          "brightness_bonus": 0.1,
          "harmonic_clarity_bonus": 0.05
        },
        "minor": {
          "warmth_bonus": 0.1,
          "emotional_depth_bonus": 0.05
        }
      },
      "genre_adjustments": {
        "electronic": {
          "precision_bonus": 0.1,
          "synthetic_character_bonus": 0.05
        },
        "acoustic": {
          "naturalness_bonus": 0.1,
          "organic_character_bonus": 0.05
        },
        "hybrid": {
          "versatility_bonus": 0.05,
          "innovation_bonus": 0.05
        }
      }
    },
    
    "validation_rules": {
      "description": "Validation rules for quality assessment",
      "required_metrics": [
        "semantic_match",
        "mix_readiness",
        "perceptual_quality",
        "stability"
      ],
      "minimum_scores": {
        "overall": 0.3,
        "semantic_match": 0.2,
        "mix_readiness": 0.2,
        "perceptual_quality": 0.2,
        "stability": 0.1
      },
      "warning_thresholds": {
        "overall": 0.5,
        "semantic_match": 0.4,
        "mix_readiness": 0.4,
        "perceptual_quality": 0.4,
        "stability": 0.3
      }
    },
    
    "optimization_targets": {
      "description": "Target values for optimization",
      "latency_ms": 10.0,
      "cpu_usage_percent": 80.0,
      "memory_usage_mb": 1024,
      "quality_score": 0.8,
      "user_satisfaction": 0.85
    }
  }
}
