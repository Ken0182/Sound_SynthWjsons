{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Configuration",
            "description": "Default build configuration",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug Configuration",
            "description": "Debug build with symbols",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "ninja",
            "displayName": "Ninja Build",
            "description": "Use Ninja generator for faster builds",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "msys2-mingw",
            "displayName": "MSYS2 MinGW",
            "description": "Build for MSYS2 MinGW on Windows",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build-msys2",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "displayName": "Default Build",
            "description": "Build with default configuration"
        },
        {
            "name": "debug",
            "configurePreset": "debug",
            "displayName": "Debug Build",
            "description": "Build debug version"
        },
        {
            "name": "ninja",
            "configurePreset": "ninja",
            "displayName": "Ninja Build",
            "description": "Build using Ninja"
        },
        {
            "name": "msys2",
            "configurePreset": "msys2-mingw",
            "displayName": "MSYS2 Build",
            "description": "Build for MSYS2 MinGW"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "displayName": "Default Tests",
            "description": "Run tests with default configuration"
        },
        {
            "name": "debug",
            "configurePreset": "debug",
            "displayName": "Debug Tests",
            "description": "Run tests with debug configuration"
        }
    ]
