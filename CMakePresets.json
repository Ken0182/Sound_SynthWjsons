{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build configuration",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug Config",
            "description": "Debug build configuration",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "ninja",
            "displayName": "Ninja Build",
            "description": "Ninja build configuration",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "msys2",
            "displayName": "MSYS2 MinGW",
            "description": "MSYS2 MinGW build for Windows",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build-msys2",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "variable": "CMAKE_HOST_SYSTEM_NAME",
                "value": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "displayName": "Default Build"
        },
        {
            "name": "debug",
            "configurePreset": "debug",
            "displayName": "Debug Build"
        },
        {
            "name": "ninja",
            "configurePreset": "ninja",
            "displayName": "Ninja Build"
        },
        {
            "name": "msys2",
            "configurePreset": "msys2",
            "displayName": "MSYS2 Build"
        }
    ]
}